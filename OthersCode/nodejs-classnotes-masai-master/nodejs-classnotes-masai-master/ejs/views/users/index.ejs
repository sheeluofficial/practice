<%- include("../_html", {title: "Users Index page", cssLink: ""}) %>
    <h1>Users List</h1>
    <div class="space-between">
      <h3>Users List</h3>
      <h3><a href="/users/new">Create new User</a></h3>
    </div>
    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Update</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(user of users) { %>
        <tr onclick="onClickHandler('<%= JSON.stringify(user) %>')">
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= user.age %></td>
          <td>
            <a href="/users/edit/<%= user._id %>"
              >Update <%= user.first_name %> <%= user.last_name %></a
            >
          </td>
          <td>
            <form action="/users/<%= user._id %>" method="post">
              <input type="hidden" name="method" value="delete" />
              <input
                type="submit"
                value="Delete <%= user.first_name %> <%= user.last_name %>"
                name="submit"
              />
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <script src="/js/users/index.js"></script>
  </body>
</html>
